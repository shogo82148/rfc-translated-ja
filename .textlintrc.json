{
  "plugins": [
    "rfc-xml"
  ],
  "filters": {},
  "rules": {
    "bcp14": true,
    "no-hankaku-kana": true,
    "no-nfd": true,
    "no-double-negative-ja": true,
    "no-dropping-the-ra": true,
    "no-doubled-conjunctive-particle-ga": true,
    "no-doubled-conjunction": true,
    "no-exclamation-question-mark": true,
    "ja-no-successive-word": true,
    "ja-no-abusage": true,
    "ja-no-redundant-expression": true,
    "ja-unnatural-alphabet": true,
    "prh": {
      "rulePaths": [
        "./prh-dict/prh_open_close.yml"
      ]
    },
    "no-mix-dearu-desumasu": {
      "preferInHeader": "",
      "preferInBody": "ですます",
      "preferInList": "",
      "strict": false
    },
    "ja-simple-user-dictionary": {
      "dictionary": [
        {
          "pattern": "セキュリティ",
          "message": "「セキュリティー」は長音をつける表記に統一してください"
        },
        {
          "pattern": "ヘッダ",
          "message": "「ヘッダー」は長音をつける表記に統一してください"
        },
        {
          "pattern": "パラメータ",
          "message": "「パラメーター」は長音をつける表記に統一してください"
        },
        {
          "pattern": "ベンダ",
          "message": "「ベンダー」は長音をつける表記に統一してください"
        },
        {
          "pattern": "フィルタ",
          "message": "「フィルター」は長音をつける表記に統一してください"
        }
      ]
    }
  }
}
